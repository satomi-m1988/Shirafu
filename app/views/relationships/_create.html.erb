<% unless current_user == user %>
	<% if user.followed_by?(current_user) %>
		<%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class:"glyphicon glyphicon-heart" %>
	<% else %>
		<%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"glyphicon glyphicon-heart-empty" %>
	<% end %>
<% end %>
