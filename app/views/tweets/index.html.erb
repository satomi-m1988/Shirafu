<table class="table">
	<% @tweets.each do |tweet| %>
		<tr>
			<td><%= tweet.user.name %></td>
			<td><%= tweet.body %></td>
			<td><%= simple_format(tweet.body.gsub!(/[#＃][\w\p{Han}ぁ-ヶｦ-ﾟー]+/, "")) %></td>
				<% if tweet.tags.any? %>
					<% tweet.tags.each do |tag| %>
					<td><%= tag.tag_name %></td>
					<% end %>
				<% end %>

			<td><%= link_to'編集', edit_tweet_path(tweet.id) %></td>
			<td><%= link_to "Destroy", tweet_path(tweet), method: :delete %></td>
		</tr>
	<% end %>
</table>