<div class="container-fluid" style="height: 600px;">
	<div class="row">
		<div class="col-md-6" style="height: 600px;">
			<div class="col-md-5" style=" border: 1px solid #333333; margin-top: 20px;">
				<%= attachment_image_tag @user, :image, :fill, 200, 200, format: 'jpg' %><br>
			</div>
			<div class="col-md-7" style=" margin-top: 100px;">
				<u style="font-size: 18px;">名前</u><br>
					<div style="height: 50px;">
						<%= @user.name %>
					</div>
					<br>
				<u style="font-size: 18px;">自己紹介</u><br>
					<div style="height: 100px;">
						<%= @user.introduction %>
					</div>
					<br>
				<u style="font-size: 18px;">禁酒歴</u><br>
					<div style="height: 50px;">
						<%= @user.history %>
					</div>
					<br>
				<u style="font-size: 18px;">好きなお酒</u><br>
					<div style="height: 50px;">
						<%= @user.favorite_alcohol %>
					</div>
					<br>
				<% if @user == current_user %>
				<div style="text-align: center;">
					<%= link_to'Edit', edit_user_path(@user), class:"btn btn-primary", style:"width: 200px;" %>
				</div>
				<% end %>
			</div>
		</div>

		<div class="col-md-6" style="height: 600px;">
			<div class="col-md-12">
				<%= render partial: 'tweets/usertweet' , locals: { tweets: @tweets } %>
			</div>
		</div>
	</div>
</div>
