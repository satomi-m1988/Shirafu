<% if user_signed_in? %>
	<% if tweet.favorited_by?(current_user) %>
		<%= link_to "いいねを外す", tweet_favorites_path(tweet.id), method: :delete, remote: true, class:"glyphicon glyphicon-thumbs-down" %>
	<% else %>
		<%= link_to "いいねをする", tweet_favorites_path(tweet.id), method: :post, remote: true, class:"glyphicon glyphicon-thumbs-up" %>
	<% end %>
<% end %>
